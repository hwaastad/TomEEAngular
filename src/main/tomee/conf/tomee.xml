<?xml version="1.0" encoding="UTF-8"?>
<tomee>
    <Resource id="TomEEJmsResourceAdapter" type="ActiveMQResourceAdapter">
        BrokerXmlConfig =  broker:(tcp://localhost:61616)
        ServerUrl       =  tcp://localhost:61616
    </Resource>

    <Resource id="TomEEConnectionFactory" type="javax.jms.ConnectionFactory">
        ResourceAdapter = TomEEJmsResourceAdapter
    </Resource>

    <Container id="MyJmsMdbContainer" ctype="MESSAGE">
        ResourceAdapter = TomEEJmsResourceAdapter
    </Container>
    
    <Resource id="TomEECacheSynchTopic" type="javax.jms.Topic"/>
</tomee>
